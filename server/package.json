    "pm2-runtime": "pm2-runtime dist/index.js",
    "ci:test": "cross-env NODE_ENV=test jest --ci --runInBand --detectOpenHandles --forceExit",
    "docker:build": "docker build -t nguyendangkhuong/racroishop:latest .",
    "docker:login": "docker login -u nguyendangkhuong -p 1b2240e4-a358-47a5-8c39-6c7ae41041b2",
